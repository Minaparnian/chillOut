<!DOCTYPE html>
<html>
  <head>
    <title>ChillUp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">


  </head>

  <body>



    <nav class="navbar navbar-inverse navbar-fixed-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to root_path do %>
                <li><%= image_tag("Chillout2.png", :class => 'logo') %></li>
              <% end %>

           </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">

          <% if @current_user.present? %>

            <li><%= link_to "Search", artists_path %></li>
            <li><a href="" class="visualiser">visualiser</a></li>

            <li><%= link_to "Your Playlists", new_playlist_path%></li>
            <li><%= link_to "Sign out #{ @current_user.name }", login_path, :method => 'delete' %></li>

          <% else %>

            <li><%= link_to 'Sign In', login_path%></li>
            <li><%= link_to 'Sign Up', new_user_path%></li>

          <% end %>
      </ul>



      </div>
     </div>
    </nav>

    <%= yield %>
  </body>

<script>
$('#screen').toggle();
  $('.visualiser').on('click', function( e ){
    e.preventDefault();
    // console.log("////")
        $('#screen').toggle();
  })
</script>

</html>
