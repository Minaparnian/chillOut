<nav class="navbar navbar-default navbar-fixed-top">

    <div class="container-fluid">


  <% if @current_user.present? %>
    <%= link_to "Edit profile", edit_user_path(@current_user) %>
    <%= link_to "Sign out #{ @current_user.name }", login_path, :method => 'delete' %>
  <% else %>
    <%= link_to 'Sign up', new_user_path%>

  <% end %>
  </div>

</nav>



<div class = "container">
<% if flash[:error].present? %>
  <p class="error">
    <%= flash[:error] %>
  </p>
<% end %>

<%= form_tag login_path do %>

<fieldset class="form-group">
  <%= email_field_tag :email, nil, :placeholder => 'Email', :class => "form-control" %>
</fieldset>
<fieldset class="form-group">
  <%= password_field_tag :password, nil, :placeholder => 'Password', :class => "form-control"%>
</fieldset>
<fieldset class="form-group">
  <%= submit_tag 'Login', :class => 'button', :class => "btn btn-default" %>
</fieldset>
<% end %>
</div>
